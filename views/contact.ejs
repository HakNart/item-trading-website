<%- include('./partials/header.ejs') %>
  <main>
    <section class="prose mx-auto">
        <h2>Contact Us</h2>
      <p>
        We'd love to hear from you! Please use the form below to send us a message
        or email us at
        <a href="mailto:contact@yourwebsitename.com">contact@ktkitchen.com</a
        >.
      </p>
      <div class="card flex-shrink-0 w-full shadow-2xl bg-base-200">
          <form class="card-body">
            <div class="form-control">
              <label for="name">Name:</label>
              <input type="text" id="name" name="name" required >
            </div>
            <div class="form-control">
              <label for="email">Email:</label>
              <input type="email" id="email" name="email" required >
            </div>
            <div class="form-control">
              <label for="subject">Subject:</label>
              <input type="text" id="subject" name="subject" required >
            </div>
            <div class="form-control">
              <label for="message">Message:</label>
              <textarea id="message" name="message" required></textarea>
            </div>
            <div class="card-actions justify-end">
              <button class="btn btn-success">Send</button>
            </div>
            
          </form>
      </div>
      
    </section>
    
   
  </main>

<%- include('./partials/footer.ejs') %>
